@model List<Course>


@{
    ViewBag.Title = "LandingPageStudent";
}

<h2>Select Courses</h2>

<form action="/Accounts/RegisterCourses" method="post">
    @Html.AntiForgeryToken()

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="checkbox">
            <label>
                @Html.HiddenFor(m => Model[i].CourseId)
                @Html.CheckBoxFor(m => Model[i].IsSelected)
                @Model[i].CourseName
            </label>
        </div>
    }

    <button type="submit" class="btn btn-primary">Register Courses</button>
</form>

